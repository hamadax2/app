MainScreen:
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "sub"
                MDBoxLayout:
                    orientation: "vertical"
                    # Main App ToolBar
                    MDCard:
                        md_bg_color:app.theme_cls.primary_color
                        size_hint:  1,.06
                        MyIcon:
                            icon: "menu"
                            on_release: nav.set_state("open")
                        Widget:
                            size_hint_x: None
                            width: "40dp"
                        MDLabel:
                            text: "SD TECH"
                            halign: "center"
                            font_size: "30sp"
                            color: [1,1,1,1]
                            font_name: "font"
                        MDLabel:
                            text: root.bidi_dark
                            font_name: "font"
                            halign: "center"
                            user_font_size: "10sp"
                            color: [1,1,1,1]
                            size_hint_x: None
                            width: "60dp"
                        MyIcon:
                            icon: "moon-waning-crescent"
                            on_press: app.dark()
                    MDBoxLayout:
                        orientation: "vertical"
                    	MDLabel:
                            id: title
                            text: root.bidi_title
                            font_name: "font"
                            font_size: "40sp"
                            halign: "center"
                            size_hint_y:None
                            height : self.texture_size[1]
                            padding_y: 40
                        MDTextField:
                            id : domain
                            hint_text: root.bidi_text
                            font_name: "font"
                            font_size: "20sp"
                            #icon_right: "android"
                            size_hint_x: 0.8
                            pos_hint: {'center_x':0.5}
                        MDRectangleFlatButton:
                            text: root.bidi_find
                            font_name: "font"
                            pos_hint: {"center_x":0.5,"center_y":0.5}
                            on_release: app.search(domain.text)
                        MDBoxLayout:
                            orientation: "vertical"
                            padding:["40dp","20dp","40dp","0dp"]
                            MDSpinner:
                                id: rc_spin
                                size_hint: None, None
                                size: dp(46), dp(46)
                                pos_hint: {'center_x': .5, 'center_y': .5}
                                active: False
                            ScrollView:
                                do_scroll_x: False
                                MDLabel:
                                    id : subdomains
                                    select_text: True
                                    copy_text: True
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    font_size:"15sp"
                                    pos_hint: {'center_x':0.5,'center_y':.5}
                                    multiline: True
                                    readonly: True
                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint_y:.1
                            Widget:
                                size_hint:None,None
                                size: "80dp","10dp"
                            MDRoundFlatButton:
                                text: root.bidi_clear
                                font_name: "font"
                                on_press: app.clear()
                            Widget:
                                size_hint:None,None
                                size: "100dp","0dp"
                            MDRoundFlatButton:
                                text: root.bidi_copy
                                font_name: "font"
                                on_press: app.copy()
                        
                        MDLabel:
                            id: welcom_label
                            text: "Created By Hamada From SD TECH"
                            color: app.theme_cls.primary_color
                            font_size: "30sp"
                            font_style: "Caption"
                            halign: "center"
                            size_hint_y:None
                            height : self.texture_size[1]
                            padding_y: 40
        # MDNavigationDrawer Window                   
        MDNavigationDrawer:
            id: nav
            MDBoxLayout:
                orientation: "vertical"
                padding: "8dp"
                spacing: "8dp"
                # MDNavigationDrawer ToolBar 
                MDCard:
                    md_bg_color:app.theme_cls.primary_color
                    size_hint:  1,.1
                    MDLabel:
                        text: "SD TECH"
                        halign: "center"
                        font_color: [1,1,1,1]
            
                # MDNavigationDrawer content
                Image:
                    source:"images/sd_logo.png"
                MDLabel:
                    id: welcom_label
                    text: "Created By Hamada From SD TECH\n\nFacebook : facebook.com/king.hamada.sd\nGitHub : hamadax2\nTelegram : t.me/klinuxsd\n hamadax1999@yahoo.com"
                    color: app.theme_cls.primary_color
                    font_size: "30sp"
                    font_style: "Caption"
                    halign: "center"
                    size_hint_y:None
                    height : self.texture_size[1]
                    padding_y: 40
                Widget:
                    
<MyIcon@MDIconButton>:
    color: [.7,0,0,1]
    size_hint: None,None
    user_font_size: "20sp"
    theme_text_color: "Custom"
    size: ("30dp","30dp")
    text_color: [1,1,1,1]
